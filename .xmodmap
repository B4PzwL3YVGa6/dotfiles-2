! turn search key into control
remove mod4 = Super_L
add Control = Super_L

! turn right alt to mode switch
keycode 113 = Mode_switch

! and now mode switch plus arrow keys are page up/down/home/end
keycode 98 = Up Up Prior
keycode 102 = Right Right End
keycode 104 = Down Down Next
keycode 110 = Left Left Home

! mode switch plus backspace is delete
keycode 22 = BackSpace BackSpace Delete
