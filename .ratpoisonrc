#
# ratpoison config
# by joshua stein <jcs@jcs.org>
#
# some of these settings require changes from my ratpoison tree:
# http://github.com/jcs/ratpoison
#

# call them as i sees them
set winname title

# reserve space for dzen
set padding 0 20 0 0

# keep the bar in the upper left displaying the active frame title
msgwait 3
set barborder 0
set bargravity nw
set barpadding 2 2
set barsticky on
set bgcolor black
set fgcolor white
set font Inconsolata:size=10
set winliststyle row
set winfmt %t
# this prevents it from taking dzen's padding into account
set barinpadding 1

# add space around this now that the padding is small
set framefmt  current frame 

# window borders
set border 2
set fwcolor orange
set bwcolor gray

# be like screen
escape C-a
bind s hsplit
bind C-s hsplit
bind S split
bind C-S split

bind c exec xterm
bind C-c exec xterm

# don't do that
warp off

# i like tab just going between the same two windows
bind Tab focuslast
bind grave focus

# act normal but prevent firefox raising itself when links are opened from
# other apps
rudeness 12

# swap workspaces
bind F1 vselect 1
bind F2 vselect 2
bind F3 vselect 3
bind F4 vselect 4
bind F5 vselect 5

# initialize the pointer
exec xsetroot -solid black -cursor_name left_ptr

# initialize workspaces
vinit

# split workspace 1 and start an xterm there
frestore (frame :number 0 :x 0 :y 20 :width 720 :height 880 :screenw 1440 :screenh 900 :window 14680077 :last-access 1 :dedicated 0),(frame :number 1 :x 720 :y 20 :width 720 :height 880 :screenw 1440 :screenh 900 :window 0 :last-access 0 :dedicated 0),
select 0
exec xterm
