#
# ratpoison config
# by joshua stein <jcs@jcs.org>
#
# some of these settings require changes from my ratpoison tree:
# http://github.com/jcs/ratpoison
#

# call them as i sees them
set winname title

# reserve space for dzen
set padding 10 20 10 10

# keep the bar in the upper left displaying the active frame title
msgwait 3
set barborder 0
set bargravity nw
set barpadding 7 3
set barsticky on
set bgcolor gray20
set fgcolor #bfb7b0
set font dinamedium9
set winliststyle row
set winfmt %t
# this prevents it from taking dzen's padding into account
set barinpadding 1

# add leading and trailing space around this now that the padding is small
set framefmt  current frame 

# window borders
set border 3
set gap 10
set fwcolor orange3
set bwcolor gray40

# be like screen
escape C-a
bind s split
bind C-s split
bind S hsplit
bind C-S hsplit

bind c exec xterm
bind C-c exec xterm

bind L exec pkill -USR1 xidle

# prevent accidental closes
unbind k

# pidgin's window is hard to get to, so control-a,A pops up a dialog to ask me
# what to set the away status to
bind A exec sh ~/bin/pidgin_away_status.sh 
# and B comes back
bind B exec ruby ~/code/pidgin_status/pidgin_status.rb available

# reload firefox through mozrepl without having to focus it
bind C-r exec echo "BrowserReload()" | nc localhost 4242 >/dev/null

# swap workspaces, but define it in 'top' to avoid having to prefix with C-a
definekey top F1 vselect 1
definekey top F2 vselect 2
definekey top F3 vselect 3
definekey top F4 vselect 4

definekey top F5 exec intel_backlight decr
definekey top F6 exec intel_backlight incr

# don't do that
warp off

# i like tab just going between the same two windows
bind Tab focuslast
bind grave focus

# act normal but prevent firefox raising itself when links are opened from
# other apps
rudeness 12

# let popups stay centered
unmanage xmessage
unmanage xprompt
unmanage OpenSSH Authentication Passphrase Request

# startup configuration

# initialize the pointer
exec xsetroot -solid gray20 -cursor_name left_ptr

# initialize workspaces
vinit

#frestore (frame :number 0 :x 0 :y 21 :width 680 :height 1059 :screenw 1920 :screenh 1080 :window 14680077 :last-access 194 :dedicated 0),(frame :number 1 :x 680 :y 21 :width 1240 :height 1059 :screenw 1920 :screenh 1080 :window 27262989 :last-access 195 :dedicated 0),

hsplit
exec xterm
